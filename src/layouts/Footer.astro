---
const COMPANY = 'Cooper & Adlys Plumbing & Heating Ltd.';
import FooterIcons from '../components/FooterIcons.astro';
import Logo from '../components/Logo.astro';
import { footerData } from '../lib/footer';
---

<footer aria-labelledby='footer-heading' class='border-t border-gray-900/10'>
  <h2 id='footer-heading' class='sr-only'>Footer</h2>
  <div class='mx-auto max-w-7xl px-6 pb-8 pt-16 sm:pt-24 lg:px-8 lg:pt-32'>
    <div class='xl:grid xl:grid-cols-3 xl:gap-8'>
      <a href='/'> <Logo /></a>
      <div
        class='mt-16 md:grid md:grid-cols-2 lg:grid-cols-4 md:gap-8 xl:col-span-2 xl:mt-0'
      >
        {
          footerData.map((section) => (
            <div>
              <h3 class='text-sm font-semibold leading-6 text-gray-900'>
                {section.title}
              </h3>
              <ul role='list' class='mt-6 space-y-4'>
                {section.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class='text-sm leading-6 text-gray-600 hover:text-sky-800'
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
    <div
      class='mt-8 border-t border-gray-900/10 pt-8 md:flex md:items-center md:justify-between'
    >
      <div class='flex space-x-6 md:order-3'>
        <FooterIcons />
      </div>

      <p class='mt-8 text-xs leading-5 text-gray-500 md:order-1 md:mt-0'>
        &copy; {new Date().getFullYear()}
        {COMPANY} All rights reserved.
      </p>
      <p class='md:order-2 text-xs mt-4 md:mt-0 leading-5 text-gray-500'>
        built by
        <a href='https://89innovations.com' class='hover:text-sky-900'>
          89 Innovations
        </a>
      </p>
    </div>
  </div>
</footer>
