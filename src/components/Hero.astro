---
import Button from '../components/Button.astro';
---

<div>
  <div class='relative'>
    <!-- Decorative image and overlay -->
    <div aria-hidden='true' class='absolute inset-0 overflow-hidden'>
      <img
        src='https://res.cloudinary.com/djr4sjcgh/image/upload/v1685655077/plumbing-840835_yginco.jpg'
        alt=''
        class='h-full w-full object-cover object-center filter grayscale blur-sm'
      />
    </div>
    <div
      aria-hidden='true'
      class='absolute inset-0 bg-sky-800 mix-blend-multiply'
    >
    </div>

    <div
      class='relative mx-auto flex max-w-3xl flex-col items-center px-6 py-32 text-center sm:py-64 lg:px-0'
    >
      <span
        class='uppercase font-semibold text-sky-200 mb-10 text-xl md:text-2xl shadow-lg'
        >At Cooper & Adlys, you're not just another job</span
      >
      <h1 class='text-4xl font-bold text-almost-white lg:text-6xl'>
        <span>Your Dedicated Local</span>
        <span class='text-sky-200'>Plumbing Specialist</span>
      </h1>
      <p class='mt-4 text-xl text-almost-white'>
        Providing professional plumbing, water treatment, and gas services for
        both renovations and new construction in Elmira, Kitchener-Waterloo, and
        the surrounding communities.
      </p>

      <div class='mt-8'>
        <Button
          label='Schedule Your Service Today'
          isPrimary='true'
          url='/contact'
        />
      </div>
    </div>
  </div>
</div>
