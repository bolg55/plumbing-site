---
const { prevUrl, nextUrl } = Astro.props;
---

<nav class='space-x-4' aria-label='Blog pages'>
  {
    prevUrl && (
      <a
        href={prevUrl}
        class='border-2 text-sm border-transparent bg-sky-800 text-almost-white hover:border-sky-800 hover:text-sky-800 hover:bg-almost-white rounded px-2 py-1 transition-all duration-150 ease-in-out'
        rel='prev'
      >
        &larr;&nbsp;Prev
      </a>
    )
  }

  {
    nextUrl && (
      <a
        href={nextUrl}
        class='border-2 text-sm border-transparent bg-sky-800 text-almost-white hover:border-sky-800 hover:text-sky-800 hover:bg-almost-white rounded px-2 py-1 transition-all duration-150 ease-in-out'
        rel='next'
      >
        Next&nbsp;&rarr;
      </a>
    )
  }
</nav>
