---
import { galleryImages } from '../lib/galleryImages';
import ImgGallery from '../components/ImgGallery';
import Layout from '../layouts/Layout.astro';
import SectionTitle from '../components/SectionTitle.astro';
---

<Layout
  title='Plumbing & Heating Project Image Gallery | Cooper & Adlys'
  description='Explore the Cooper & Adlys image gallery to see our high-quality plumbing and heating work across Elmira, Kitchener, Waterloo, Cambridge, Guelph, and beyond. Witness our commitment to excellence through every project.'
>
  <div class='mt-16'>
    <SectionTitle
      accent='Quality Workmanship in Pictures'
      title='Visual showcase of our work'
    />
  </div>
  <div class='flex mt-4 justify-center align-middle'>
    <a
      href='/testimonials'
      class='hover:text-sky-800 transition-all underline underline-offset-2 cursor-pointer'
      >See what our customers have to say</a
    >
  </div>

  <ImgGallery galleryImages={galleryImages} client:only='react' />
</Layout>
